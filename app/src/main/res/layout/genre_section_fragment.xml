<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="20dp">

  <TextView
    android:id="@+id/title"
    style="@style/TextAppearance.AppCompat.Headline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/select_interests"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  
  <CheckBox
    android:id="@+id/android_label"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/android_development"
    android:padding="10dp"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintEnd_toEndOf="parent"/>

  <CheckBox
    android:id="@+id/arch_components_label"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/architecture_components"
    android:padding="10dp"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/android_label"
    app:layout_constraintEnd_toEndOf="parent"/>

  <CheckBox
    android:id="@+id/jetpack_compose_label"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/jetpack_compose"
    android:padding="10dp"
    android:gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/arch_components_label"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>